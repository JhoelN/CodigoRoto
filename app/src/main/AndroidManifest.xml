<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.jhoelnarvaez.codigoroto">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodigoRoto"
        tools:targetApi="31">

        <!-- Actividad de inicio (LoginActivity) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad de registro -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- Actividad principal del juego/menu -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Otras actividades del juego -->
        <activity
            android:name=".MenuActivity"
            android:exported="false" />

        <activity
            android:name=".CombateActivity"
            android:exported="false" />

        <activity
            android:name=".InventarioActivity"
            android:exported="false" />

        <activity
            android:name=".HabilidadesActivity"
            android:exported="false" />

    </application>

</manifest>
